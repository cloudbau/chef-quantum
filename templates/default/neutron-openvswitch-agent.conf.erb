description "neutron neutron-ovs-agent"

start on runlevel [2345]
stop on runlevel [016]

chdir /var/run

pre-start script
  mkdir -p /var/log/neutron
  mkdir -p /var/run/neutron
  chown neutron:root /var/log/neutron
  chown neutron:root /var/run/neutron
end script

exec start-stop-daemon --start --chuid neutron --exec /opt/cloudbau/neutron-virtualenv/bin/neutron-openvswitch-agent -- --config-file=/etc/neutron/neutron.conf --config-file=/etc/neutron/plugins/openvswitch/ovs_neutron_plugin.ini --log-file=/var/log/neutron/neutron-ovs-agent.log
